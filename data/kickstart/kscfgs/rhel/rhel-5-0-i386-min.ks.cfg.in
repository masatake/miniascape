# RHEL 5
url --url=@KSTREE_LOCATION@/RHEL/5/0/i386/default/
install
text
lang en_US.UTF-8
keyboard us
skipx
auth  --useshadow  --enablemd5
firewall --enabled --port=22:tcp
firstboot --disable
network --device=eth0 --bootproto=dhcp
network --device=eth1 --bootproto=dhcp --onboot=no
network --device=eth2 --bootproto=dhcp
network --device=eth3 --bootproto=dhcp --onboot=no
rootpw --iscrypted $1$u3qutDHb$7APw4U/78XZW44uPsoNa41
selinux --disabled
timezone  Asia/Tokyo
zerombr
bootloader --location=mbr
clearpart --all --initlabel
autopart
key --skip
services --disable atd,avahi-daemon,cups,gpm,ip6tables,lm_sensors,mcstrans,mdmonitor,ntpd,restorecond,sendmail,smartd,rhnsd
reboot

repo --name=rhel-kstree --baseurl=@KSTREE_LOCATION@/RHEL/5/0/i386/default/Server/


%pre
# Make up dummy lspci to avoid the anaconda bug similar to bz#445974.
cat << EOF > /sbin/lspci
#! /bin/sh
exit 0
EOF
chmod +x /sbin/lspci


