AUTOMAKE_OPTIONS = foreign
EXTRA_DIST = README vm-image.spec rpm.mk

include $(abs_srcdir)/rpm.mk


domainimagedir = @localstatedir@/lib/libvirt/images
domainxmldir = @sysconfdir@/miniascape/domains
domainsysxmldir = @sysconfdir@/libvirt/qemu

dist_domainimage_DATA = @DOMAIN_IMAGES@
dist_domainxml_DATA = @DOMAIN_XML@

install-data-local:
	$(INSTALL) -d $(DESTDIR)$(domainsysxmldir)
	for f in @DOMAIN_XML@; do \
		$(INSTALL) -m 600 $$f $(DESTDIR)$(domainsysxmldir); done

