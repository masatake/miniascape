AC_INIT([vm-@@DOMAIN_NAME@@-@@DOMAIN_VARIANT@@],[0.1])
AM_INIT_AUTOMAKE

AC_PROG_INSTALL
AC_PROG_MKDIR_P

AC_PATH_PROG([QEMU_IMG],[qemu-img])
AC_PATH_PROG([VIRSH],[virsh])
AC_PATH_PROG([AUGTOOL],[augtool])

AC_SUBST([DOMAIN_NAME],[@@DOMAIN_NAME@@])
AC_SUBST([DOMAIN_IMAGES],["@@DOMAIN_IMAGES@@"])
AC_SUBST([DOMAIN_XML],[@@DOMAIN_NAME@@.xml])
AC_SUBST([ARCH],[i686])

timestamp=`LANG=C date +"%a %b %d %Y"`
AC_SUBST([TIMESTAMP],[$timestamp])

AC_OUTPUT([
Makefile
README
vm-image.spec
])
