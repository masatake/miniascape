server {

    listen      master:80;
    server_name master;

# proxy

# @see http://wiki.nginx.org/NginxHttpProxyModule
# @see http://wiki.nginx.org/NginxLikeApache (Apache ProxyReverse)

    location /contents/ {
        root /contents;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Server $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for; 
        proxy_pass http://@KICKSTART_TREE_SERVER@;
    }

    location /ks/ {
        root /usr/share/@PACKAGE@/kickstart;
        autoindex  on;
        allow @LIBVIRT_NETWORK_1_BASE@.0/24;
        allow 127.0.0.1;
        deny all;
    }
}
