%post
cat << EOF >> /etc/sysconfig/network
GATEWAYDEV=eth0
EOF

rpm --import /etc/pki/rpm-gpg/RPM-GPG-KEY-redhat-release

cat << EOF > /etc/yum.repos.d/rhel-kstree.repo
[rhel-kstree]
name=Red Hat Enterprise Linux $releasever - $basearch - Server (kickstart tree)
baseurl=@AUTOINST_TREE_URL_BASE@/RHEL/5/5/Server/i386/Server/
enabled=1
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-redhat-release

[rhel-cluster-kstree]
name=Red Hat Enterprise Linux $releasever - $basearch - Cluster (kickstart tree)
baseurl=@AUTOINST_TREE_URL_BASE@/RHEL/5/5/Server/i386/Cluster/
enabled=1
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-redhat-release

[rhel-cluster-storage-kstree]
name=Red Hat Enterprise Linux $releasever - $basearch - ClusterStorage (kickstart tree)
baseurl=@AUTOINST_TREE_URL_BASE@/RHEL/5/5/Server/i386/ClusterStorage/
enabled=1
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-redhat-release
EOF
