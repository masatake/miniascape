%post --nochroot
cp /tmp/ks.cfg /mnt/sysimage/root/


%post
cat << EOF >> /etc/sysconfig/network
GATEWAYDEV=eth0
EOF

cat << EOF > /etc/yum.repos.d/rhel-kstree.repo
[rhel-kstree]
name=Red Hat Enterprise Linux 6 i386 (kstree)
baseurl=@AUTOINST_TREE_URL_BASE@/RHEL/6/0/Server/i386/Server/
enabled=1
gpgcheck=1
EOF

rpm --import /etc/pki/rpm-gpg/RPM-GPG-KEY-redhat-beta
rpm --import /etc/pki/rpm-gpg/RPM-GPG-KEY-redhat-release

cat << EOF >> /etc/inittab

# serial console:
co:2345:respawn:/sbin/agetty ttyS0 115200 vt100-nav
EOF

