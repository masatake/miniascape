# guest specific configurations
#
include /etc/$(PACKAGE)/profiles/site.cfg

NAME    := rhel-5-0-guest-1
LOCATION        = $(AUTOINST_TREE_URL_BASE)/RHEL/5/0/Server/i386/

EXTRA_ARGS      = "ks=$(AUTOINST_CFG_URL_BASE)/rhel-5-0-i386-min.ks.cfg ksdevice=eth0"
#EXTRA_ARGS      = "ks=file:/rhel-5-0-i386-min.ks.cfg ksdevice=eth0"
#INJECT_INITRD	= --initrd-inject=$(AUTOINST_CFG_DIR)/rhel-5-0-i386-min.ks.cfg

#OTHER_OPTIONS	= --noapic
## It does not boot if vcpu > 1 (reason unknown).
VCPU	=1

OS_VARIANT      = rhel5
DISK_1_NAME     = disk-1.$(DISK_FMT)

NETWORK_1       = network:net-1
NETWORK_2       = network:net-1
NETWORK_3       = network:net-3
NETWORK_4       = network:net-3
MAC_1   = @HWADDR_PREFIX@:01:01:50
MAC_2   = @HWADDR_PREFIX@:11:01:50
MAC_3   = @HWADDR_PREFIX@:03:01:50
MAC_4   = @HWADDR_PREFIX@:13:01:50
IP_1    = @NET_1_PREFIX@.150
IP_3    = @NET_3_PREFIX@.150

# vim: set ft=make:
