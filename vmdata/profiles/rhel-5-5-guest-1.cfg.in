# guest specific configurations
#
include /etc/$(PACKAGE)/profiles/site.cfg

NAME    := rhel-5-5-guest-1
LOCATION        = $(AUTOINST_TREE_URL_BASE)/RHEL/5/5/Server/i386/
EXTRA_ARGS      = "ks=$(AUTOINST_CFG_URL_BASE)/rhel-5-5-i386-min.ks.cfg ksdevice=eth0"
#EXTRA_ARGS      = "ks=file:/rhel-5-5-i386-min.ks.cfg ksdevice=eth0"
#INJECT_INITRD   = --initrd-inject=$(AUTOINST_CFG_DIR)/rhel-5-5-i386-min.ks.cfg
OS_VARIANT      = rhel5
DISK_1_NAME     = disk-1.$(DISK_FMT)

DISK_BUS_DEFAULT        := virtio
NET_MODEL_DEFAULT       := virtio

NETWORK_1       = network:net-1
NETWORK_2       = network:net-1
NETWORK_3       = network:net-3
NETWORK_4       = network:net-3
MAC_1   = @HWADDR_PREFIX@:01:01:55
MAC_2   = @HWADDR_PREFIX@:11:01:55
MAC_3   = @HWADDR_PREFIX@:03:01:55
MAC_4   = @HWADDR_PREFIX@:13:01:55
IP_1    = @NET_1_PREFIX@.155
IP_3    = @NET_3_PREFIX@.155

# vim: set ft=make:
