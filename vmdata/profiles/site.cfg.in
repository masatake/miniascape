# site global configurations 
#
# NOTE: This is a makefile
#
packagedvm_CONNECT	?=	qemu:///system
packagedvm_SITECONF	?=	/etc/@BASE_PACKAGE@/profiles/site.cfg
packagedvm_MEMORY  ?=      256
packagedvm_ARCH    ?=      i686
packagedvm_VCPU    ?=      2
packagedvm_KEYMAP  ?=      en-us

packagedvm_DISK_TOPDIR	?= /var/lib/libvirt/images

packagedvm_DISK_FMT_DEFAULT	?= qcow2
packagedvm_DISK_CACHE_MODE	?= none
packagedvm_DISK_PERMS	?= rw

# @see https://www.redhat.com/archives/libvir-list/2010-October/msg00946.html
#packagedvm_DISK_QEMU_IMG_OPTS_DEFAULT	?= -o cluster_size=2M,preallocation=metadata
packagedvm_DISK_QEMU_IMG_OPTS_DEFAULT	?= -o cluster_size=2M

packagedvm_DISK_SIZE_DEFAULT	?= 5
packagedvm_DISK_BUS_DEFAULT	?= ide

packagedvm_NET_MODEL_DEFAULT	?= e1000

packagedvm_AUTOINST_CFG_DIR	?= /usr/share/@BASE_PACKAGE@/autoinst
packagedvm_AUTOINST_TREE_URL_BASE	?= @AUTOINST_TREE_URL_BASE@
packagedvm_AUTOINST_CFG_URL_BASE	?= @AUTOINST_CFG_URL_BASE@

packagedvm_OS_TYPE	?= linux

packagedvm_INJECT_INITRD	?=

# vim: set ft=make:
