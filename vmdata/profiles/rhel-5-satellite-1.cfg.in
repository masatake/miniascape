# guest specific configurations
#
include /etc/$(PACKAGE)/profiles/site.cfg

NAME    := rhel-5-satellite-1
LOCATION        := $(AUTOINST_TREE_URL_BASE)/RHEL/5/5/Server/i386/
EXTRA_ARGS      := "ks=$(AUTOINST_CFG_URL_BASE)/rhel-5-satellite.ks.cfg ksdevice=eth0"
#EXTRA_ARGS      = "ks=file:/rhel-5-satellite.ks.cfg ksdevice=eth0"
#INJECT_INITRD   = --initrd-inject=$(AUTOINST_CFG_DIR)/rhel-5-satellite.ks.cfg

OS_VARIANT      := rhel5
DISK_1_NAME     := disk-1.$(DISK_FMT)
DISK_2_NAME     := disk-2.$(DISK_FMT)
DISK_3_NAME     := disk-3.$(DISK_FMT)
DISK_4_NAME     := disk-4.$(DISK_FMT)
DISK_5_NAME     := disk-5.$(DISK_FMT)
DISK_SIZE_DEFAULT := 40

## Satellite requires a lot of memory; 2048 MB is the least size
MEMORY  :=      2048

## Customize this in accordance with your environment
#VIRTINST_WAIT_TIME	:= 30

DISK_BUS_DEFAULT        := virtio
NET_MODEL_DEFAULT       := virtio

NETWORK_1       := network:net-1
NETWORK_2       := network:net-1
NETWORK_3       := network:net-2
NETWORK_4       := network:net-2
MAC_1   := @HWADDR_PREFIX@:01:00:21
MAC_2   := @HWADDR_PREFIX@:11:00:21
MAC_3   := @HWADDR_PREFIX@:02:00:21
MAC_4   := @HWADDR_PREFIX@:12:00:21
IP_1    = @NET_1_PREFIX@.21
IP_3    = @NET_2_PREFIX@.21

# vim: set ft=make:
