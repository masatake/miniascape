# guest specific configurations
#
include /etc/$(PACKAGE)/profiles/site.cfg


NAME    := jboss-2
LOCATION        = $(AUTOINST_TREE_URL_BASE)/RHEL/5/5/Server/i386/
EXTRA_ARGS      = "ks=$(AUTOINST_CFG_URL_BASE)/rhel-5-jboss.ks.cfg ksdevice=eth0"
OS_VARIANT      = rhel5
DISK_1_NAME     = disk-1.$(DISK_FMT)

# JBoss needs disk and memory space:
MEMORY = 1024
DISK_SIZE_DEFAULT = 20
DISK_BUS_DEFAULT        := virtio

NETWORK_1       = network:net-1
NETWORK_2       = network:net-1
NETWORK_3       = network:net-2
NETWORK_4       = network:net-2
MAC_1   = @HWADDR_PREFIX@:0100:32
MAC_2   = @HWADDR_PREFIX@:1100:32
MAC_3   = @HWADDR_PREFIX@:0200:32
MAC_4   = @HWADDR_PREFIX@:1200:32
IP_1    = @NET_1_PREFIX@.32
IP_3    = @NET_3_PREFIX@.32

