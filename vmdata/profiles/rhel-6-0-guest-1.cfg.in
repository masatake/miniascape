# guest specific configurations
# 
include /etc/$(PACKAGE)/profiles/site.cfg

NAME    := rhel-6-0-guest-1
LOCATION        = $(AUTOINST_TREE_URL_BASE)/RHEL/6/0/Server/i386/
EXTRA_ARGS      = "ks=$(AUTOINST_CFG_URL_BASE)/rhel-6-0-i386-min.ks.cfg ksdevice=eth0"
#EXTRA_ARGS      = "ks=file:/rhel-6-0-i386-min.ks.cfg ksdevice=eth0"
#INJECT_INITRD   = --initrd-inject=$(AUTOINST_CFG_DIR)/rhel-6-0-i386-min.ks.cfg

OS_VARIANT      = fedora11
DISK_1_NAME     = disk-1.$(DISK_FMT)
OTHER_OPTS      = $(OTHER_OPTS) --watchdog

# Anaconda requires much memory than older releases.
MEMORY  := 512
VIRTINST_WAIT_TIME	:= 40

DISK_BUS_DEFAULT        := virtio
NET_MODEL_DEFAULT	:= virtio

NETWORK_1       = network:net-1
NETWORK_2       = network:net-1
NETWORK_3       = network:net-3
NETWORK_4       = network:net-3
MAC_1   = @HWADDR_PREFIX@:01:01:60
MAC_2   = @HWADDR_PREFIX@:11:01:60
MAC_3   = @HWADDR_PREFIX@:03:01:60
MAC_4   = @HWADDR_PREFIX@:13:01:60
IP_1    = @NET_1_PREFIX@.160
IP_3    = @NET_3_PREFIX@.160

# vim: set ft=make:
