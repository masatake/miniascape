# guest specific configurations
#
include /etc/$(PACKAGE)/profiles/site.cfg

NAME    := ubuntu-10-guest-0
LOCATION        = http://ftp.jp.debian.org/debian/dists/stable/main/installer-i386/
LOCATION        = ftp://ftp.ubuntu.com/ubuntu/dists/lucid/main/installer-i386/
EXTRA_ARGS      = "auto=true interface=eth0 hostname=ubuntu-10-guest-0 domain=@NET_1_DOMAIN@ url=$(AUTOINST_CFG_URL_BASE)/ubuntu-10.04-preseed.cfg"
OS_VARIANT      = ubuntulucid
DISK_1_NAME     = disk-1.$(DISK_FMT)

DISK_BUS_DEFAULT        := virtio
NET_MODEL_DEFAULT       := virtio

NETWORK_1       = network:net-1
NETWORK_2       = network:net-1
NETWORK_3       = network:net-3
NETWORK_4       = network:net-3
MAC_1   = @HWADDR_PREFIX@:01:01:20
MAC_2   = @HWADDR_PREFIX@:11:01:20
MAC_3   = @HWADDR_PREFIX@:03:01:20
MAC_4   = @HWADDR_PREFIX@:13:01:20
IP_1    = @NET_1_PREFIX@.120
IP_3    = @NET_3_PREFIX@.120

# vim: set ft=make:
