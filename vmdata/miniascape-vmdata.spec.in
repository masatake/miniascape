%define debug_package   %{nil}

Name:           @PACKAGE@
Version:        @VERSION@
Release:        1%{?dist}
Summary:        HW and SW profile data for packaged VMs
Group:          Development/System
License:        GPLv3+
URL:            http://github.com/ssato/miniascape
Source0:        %{name}-%{version}.tar.xz
BuildRoot:      %{_tmppath}/%{name}-%{version}-%{release}-root-%(%{__id_u} -n)
BuildArch:      noarch


%description
Virtualization (KVM/Qemu) guests profile data.


%prep
%setup -q


%build
%configure
make %{?_smp_mflags}


%install
%{__rm} -rf $RPM_BUILD_ROOT
make install DESTDIR=$RPM_BUILD_ROOT


%clean
%{__rm} -rf $RPM_BUILD_ROOT


%files
%defattr(-,root,root,-)
%doc README
%config(noreplace) %{_sysconfdir}/@BASE_PACKAGE@/profiles/*
%{_datadir}/@BASE_PACKAGE@/autoinst/*.cfg


