# 
# Default values for globals.
#
# see also: virt-install(1)

# Basic
miniascape_SED	= @SED@
miniascape_QEMU_IMG = @QEMU_IMG@
miniascape_VIRTINST = virt-install

miniascape_CONNECT	=	qemu:///system
miniascape_SITECONF	=	/etc/@PACKAGE@/profiles/site.cfg
miniascape_MEMORY  =      256
miniascape_ARCH    =      i686
miniascape_BASEARCH	= i386
miniascape_VCPU    =      2
miniascape_KEYMAP  =      en-us
miniascape_OS_TYPE	= linux


# disk
miniascape_DISK_TOPDIR	= /var/lib/libvirt/images

miniascape_DISK_IMG_FMT	= qcow2
miniascape_DISK_PERMS	= rw
miniascape_DISK_CACHE_MODE	= none

# @see https://www.redhat.com/archives/libvir-list/2010-October/msg00946.html
#miniascape_DISK_QEMU_IMG_OPTS	= -o cluster_size=2M,preallocation=metadata
miniascape_DISK_QEMU_IMG_OPTS	= -o cluster_size=2M

miniascape_DISK_SIZE	= 5G
miniascape_DISK_BUS	= ide

miniascape_DISK_1_NAME	= disk-1.$(miniascape_DISK_IMG_FMT)


# network
miniascape_NET_MAC_PREFIX	= @HWADDR_PREFIX@
miniascape_NET_MODEL	= e1000
miniascape_NET_MAC	= RANDOM

miniascape_NET_1_PREFIX		= @NET_1_NETWORK@
miniascape_NET_2_PREFIX		= @NET_2_NETWORK@

miniascape_NET_1_DOMAIN		= @NET_1_DOMAIN@
miniascape_NET_2_DOMAIN		= @NET_2_DOMAIN@

miniascape_NET_NETWORK_1       = network:net-1
miniascape_NET_NETWORK_2       = network:net-1
miniascape_NET_NETWORK_3       = network:net-2
miniascape_NET_NETWORK_4       = network:net-2


# autoinstall
miniascape_AUTOINST_CFG_DIR	= /usr/share/@PACKAGE@/autoinst
miniascape_AUTOINST_TREE_URL_BASE	= @AUTOINST_TREE_URL_BASE@
miniascape_AUTOINST_CFG_URL_BASE	= @AUTOINST_CFG_URL_BASE@

# other options passed to virt-install:
miniascape_VIRTINST_WAIT_TIME	= 20
miniascape_OTHER_OPTIONS	= --check-cpu --hvm --accelerate --vnc --noreboot --noautoconsole \
--wait=$(miniascape_VIRTINST_WAIT_TIME)

# package:
prefix  = @prefix@
pkgdatadir      = @datadir@/@PACKAGE@
pkglibdatadir   = $(pkgdatadir)/devel

SED	= @SED@

miniascape_RPM_FLAVOR	= minimal
miniascape_RPM_BASENAME	= pkgdvm-$(miniascape_NAME)-$(miniascape_RPM_FLAVOR)
miniascape_RPM_VERSION	= 0.1.99

# placeholder to add other rpm dependencies
miniascape_RPM_DEPS	=

miniascape_VM_XML_DIR	= @sysconfdir@/libvirt/qemu


# vim: set ft=make:
