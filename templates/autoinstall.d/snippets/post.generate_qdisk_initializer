{% include "snippets/pre_post.find_disk_initial" %}
test -d /root/setup || mkdir -p /root/setup
cat << EOF >> /root/setup/initialize_qdisk.sh
#! /bin/bash
set -ex
qdiskdev=\$1
qdisklabel=\$2
test "x\$qdiskdev" = "x" && qdiskdev=/dev/${disk1}1
test "x\$qdisklabel" = "x" && qdisklabel="qdisk-0"
mkqdisk -f \${qdisklabel} || mkqdisk -c \${qdiskdev} -l \${qdisklabel} 
EOF
chmod +x /root/setup/initialize_qdisk.sh
